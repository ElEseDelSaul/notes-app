<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header text-center">
            <h2>Edit Note</h2>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" value="{{note.title}}" autofocus class="form-control">
                </div>
                <div class="form-group">
                    <textarea type="text" name="description" class="form-control">{{note.description}}
                    </textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>